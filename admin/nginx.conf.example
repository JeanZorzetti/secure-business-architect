# Exemplo de configuração Nginx para SPA (React Router)
# Copie este arquivo para /etc/nginx/sites-available/jbadmin.roilabs.com.br

server {
    listen 80;
    server_name jbadmin.roilabs.com.br;

    # Redirecionar para HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name jbadmin.roilabs.com.br;

    # Certificados SSL (configurar com certbot ou similar)
    # ssl_certificate /etc/letsencrypt/live/jbadmin.roilabs.com.br/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/jbadmin.roilabs.com.br/privkey.pem;

    # Diretório do build
    root /var/www/jbadmin/dist;
    index index.html;

    # Configuração para SPA - IMPORTANTE!
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Cache para assets estáticos
    location /assets/ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Desabilitar cache para index.html
    location = /index.html {
        add_header Cache-Control "no-cache, no-store, must-revalidate";
    }

    # Proxy para API backend
    location /api/ {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Compressão gzip
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/javascript application/json;
}
